{
    "crawler": {
        "userAgent": "phantom-spider",
        "respectRobotsTxt": true,
        "maxDepth": 0,
        "cache": "cache",
        "acceptCookies": true,
        "filterByDomain": true // Specifies whether the crawler will restrict queued requests to a given domain/domains

        // domain specific config
        ,
        "play.google.com": {
            "filters": [
                "/store/apps/*"
            ],
            "bannedExtensions": ".*/store/apps/details?id=.*reviewId=.*"
        }
    }
}